{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch and Build",
            "type": "shell",
            "command": "find src -name '*.cairo' | entr -c sozo build",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "sozo build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
